<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.library.mapper.BookSaveMapper">

    <insert id="save">
        INSERT INTO book_save (book_id, user_id)
        VALUES (#{bookId}, #{userId})
    </insert>

    <update id="update">
        UPDATE book_save
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="bookId != null">
                book_id = #{bookId},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM book_save WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="query" resultMap="BaseResultMap">
        SELECT bs.*,
        b.name AS book_name,
        b.author,
        b.num,
        u.user_name,
        bsa.floor,
        bsa.area,
        bsa.frame
        FROM book_save bs
        LEFT JOIN book b On b.id = bs.book_id
        LEFT JOIN user u ON u.id = bs.user_id
        LEFT JOIN bookshelf bsa ON bsa.id = b.bookshelf_id
        <where>
            <if test="id != null">
                AND bs.id = #{id}
            </if>
            <if test="userId != null">
                AND bs.user_id = #{userId}
            </if>
            <if test="bookId != null">
                AND bs.book_id = #{bookId}
            </if>
            <if test="name != null and name != ''">
                AND b.name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        <if test="offset != null and size != null">
            LIMIT #{offset},#{size}
        </if>
    </select>

    <select id="queryCount" resultType="integer">
        SELECT COUNT(*)
        FROM book_save bs
        LEFT JOIN book b ON b.id = bs.book_id
        LEFT JOIN user u ON u.id = bs.user_id
        LEFT JOIN bookshelf bsa ON bsa.id = b.bookshelf_id
        <where>
            <if test="id != null">
                AND bs.id = #{id}
            </if>
            <if test="userId != null">
                AND bs.user_id = #{userId}
            </if>
            <if test="bookId != null">
                AND bs.book_id = #{bookId}
            </if>
            <if test="name != null and name != ''">
                AND b.name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </select>

    <resultMap id="BaseResultMap" type="cn.library.pojo.vo.BookSaveVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="book_id" property="bookId"/>
        <result column="user_name" property="userName"/>
        <result column="book_name" property="bookName"/>
        <result column="author" property="author"/>
        <result column="num" property="num"/>
        <result column="floor" property="floor"/>
        <result column="area" property="area"/>
        <result column="frame" property="frame"/>
    </resultMap>


</mapper>
